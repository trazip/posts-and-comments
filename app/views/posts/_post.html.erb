<article id="<%= dom_id post %>" class="mb-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <%= link_to "Back to posts", posts_path %>
      <h2><%= post.title %></h2>
    </div>
    
    <div class="d-flex">
      <%= link_to "Edit this post", edit_post_path(post), class: "btn btn-outline me-1" %>
      <%= button_to "Destroy this post", post, method: :delete, class: "btn btn-danger text-white" %>
    </div>
  </div>

  <p>
    <%= post.content %>
  </p>
</article>