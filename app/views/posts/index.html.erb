<div class="d-flex justify-content-between align-items-center my-5">
  <h1 class="display-5 link-body-emphasis mb-1">Posts</h1>
  <%= link_to "New post", new_post_path, class: "btn btn-primary" %>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <%= link_to post.title, post %>
  <% end %>
</div>


